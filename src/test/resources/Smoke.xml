<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="3" name="Smoke tests" parallel="classes">

    <test name="Smoke">

        <groups>
            <run>
                <include name="Smoke" />
            </run>
        </groups>

        <classes>
            <class name="tests.Addition"/>
            <class name="tests.Subtraction"/>
            <class name="tests.Division"/>
            <class name="tests.Multiplication"/>
        </classes>

    </test>

</suite>
